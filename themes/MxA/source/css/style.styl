@font-face
  font-family: "MuseoModerno"
  font-style: normal
  font-weight: 531
  font-display: swap
  src: url(/fonts/museomoderno.woff2) format("woff2")
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

body
  font-family: "Calibri", sans-serif
  background-color: darkblue
  color: white
  background-image: url(/assets/testing/nicholas-robert-jTpECTclado-unsplash.jpg)
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  margin: 0
  height: 100vh

p
  margin-top: 0

#home
  max-width: 960px
  margin: 0 auto

  header, nav, main
    height: 33vh
    display: flex
    justify-content: center
    align-items: center

  nav
    flex-direction: column

    #nav-top, #nav-bottom
      display: flex
      align-items: center

    #nav-top
      justify-content: space-around
      width: 100%

      .centre-line
        border-bottom: 2px solid white
        width: 30vw
        max-width: 300px

      #profile-image
        width: 20vw
        height: 20vw
        max-width: 200px
        max-height: 200px
        border-radius: 100px

    #nav-bottom
      width: 20em
      max-width: 20em
      max-height: 6em
      flex-direction: column
      flex-wrap: wrap
      justify-content: space-around
      margin-top: 1em

      a
        text-decoration: none
        color: inherit
        background-color: rgba(0, 0, 0, 0.6)
        border-radius: 0.5em
        padding: 0.5em
        width: 8em
        display: block
        text-align: center

  aside
    max-width: 640px
    background-color: rgba(0, 0, 0, 0.6)
    border-radius: 5px
    padding: 5px
    text-align: left

    p
      margin: 0

  h1
    font-family: MuseoModerno

#nav-home
  display: flex
  align-items: center
  
  h1
    flex-grow: 1

.icon
  width: 2em
  height: 2em

@media screen and (min-width: 42rem)
  #home nav #nav-bottom
    width: 40em
    max-width: 40em
    flex-direction: row