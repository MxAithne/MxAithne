// Globals

@font-face
  font-family: "MuseoModerno"
  font-style: normal
  font-weight: 531
  font-display: swap
  src: url(/fonts/museomoderno.woff2) format("woff2")
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

darkBackground()
  background-color: rgba(0, 0, 0, 0.7)
  border-radius: .5em
  padding: .5em

// Styling

body
  font-family: "Calibri", sans-serif
  font-size: 18px
  background-color: darkblue
  color: white
  margin: 0

h1, h2, h3, h4, h5, h6
  font-family: MuseoModerno
  font-size: 1em

p
  margin-top: 0

a
  text-decoration: none
  color: inherit

article
  max-width: 36em
  margin: 0 auto
  darkBackground()
  //background-color: hsla(0, 0%, 20%, 1)

#home // Applied to inedex.ejs
  max-width: 960px
  margin: 0 auto
  background-color: black
  background-image: url(/photographs/IMG_2116.JPEG)
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  min-height: 100vh

  header, nav, main
    height: 33vh
    display: flex
    justify-content: center
    align-items: center

  header
    flex-direction: column

    h1, h2
      margin: 0.2em
      text-shadow: 0 0 10px rgba(0, 0, 0, 0.7)
      font-size: 2em

    h2
      max-width: 80vw
      text-align: center
      font-size: 1.2em

  nav
    flex-direction: column

    #nav-top, #nav-bottom
      display: flex
      align-items: center

    #nav-top
      justify-content: space-around
      width: 100%

      .centre-line
        border-bottom: 2px solid white
        width: 30vw
        max-width: 300px

      #profile-image
        width: 20vw
        height: 20vw
        max-width: 200px
        max-height: 200px
        border-radius: 100px
        box-shadow: 0px 0px 4px 0px black;

    #nav-bottom
      width: 20em
      max-width: 20em
      height: 6em
      flex-direction: column
      flex-wrap: wrap
      justify-content: space-around
      margin-top: 1em

      a
        width: 8em
        display: block
        text-align: center
        darkBackground()

  aside
    max-width: 640px
    text-align: left
    darkBackground()

    p
      margin: 0

#navigation
  display: flex
  align-items: center
  max-width: 36em
  margin: 0 auto 1em auto
  darkBackground()
  
  h1
    flex-grow: 1
    padding: 0 0.5em 0 0.5em
    margin: 0

#list
  ul
    list-style-type: none
    padding: 0
    display: grid
    grid-gap: 1em
    grid-template-columns: repeat(auto-fit,8.5em)
    justify-content: center
    margin: 0 1em

  li
    margin: 0
    darkBackground()
    display: flex
    flex-direction: column
    align-items: center

    .missingimage, img
      width: 7.5em
      height: 5.8em
      text-align: center
      border-radius: 0.25em

    div
      width: 100%
      min-height: 2.5em

.icon
  width: 2em
  height: 2em

@media screen and (min-width: 42rem)
  #home nav #nav-bottom
    width: 40em
    max-width: 40em
    flex-direction: row